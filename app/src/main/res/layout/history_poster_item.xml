<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="95dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/watcheditem_timestamp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:layout_margin="4dp"
            tools:text="Watched: 23/04/22 15:08"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/movieitem_poster_cardview" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/movieitem_poster_cardview"
            android:layout_width="match_parent"
            android:layout_height="146dp"
            app:layout_constraintTop_toBottomOf="@id/watcheditem_timestamp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/movieitem_title">
            <ImageView
                android:id="@+id/movieitem_poster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_movie_filter_24"
                android:scaleType="fitXY"
                />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/movieitem_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/movieitem_poster_cardview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Pulp Fiction" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>