<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/collectedbutton_cardview"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="?colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_margin="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">
        <ImageView
            android:id="@+id/collectedbutton_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/ic_baseline_movie_filter_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/collectedbutton_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Collected"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginStart="8dp"
            android:textAllCaps="true"
            app:layout_constraintTop_toTopOf="@id/collectedbutton_icon"
            app:layout_constraintStart_toEndOf="@id/collectedbutton_icon" />

        <TextView
            android:id="@+id/collectedbutton_collected_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/collectedbutton_title"
            app:layout_constraintStart_toStartOf="@id/collectedbutton_title"
            tools:text="Collected at: 24/01/2021 14:52" />

        <ImageView
            android:id="@+id/collectedbutton_state"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:tint="@color/white"
            android:src="@drawable/ic_baseline_check_24"
            app:layout_constraintTop_toTopOf="@id/collectedbutton_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>