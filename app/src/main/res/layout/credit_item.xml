<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="12dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/credititem_image_cardview"
            android:layout_width="96dp"
            android:layout_height="125dp"
            app:cardCornerRadius="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                    android:id="@+id/credititem_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_baseline_person_24"
 />
        </com.google.android.material.card.MaterialCardView>


        <TextView
            android:id="@+id/credititem_person_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:padding="2dp"
            tools:text="John Smith A very long person name"
            app:layout_constraintTop_toBottomOf="@id/credititem_image_cardview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/credititem_person_role"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/credititem_person_role"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="italic"
            android:textAlignment="center"
            tools:text="Joe Bloggs A very long character name"
            android:padding="2dp"
            app:layout_constraintTop_toBottomOf="@id/credititem_person_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>