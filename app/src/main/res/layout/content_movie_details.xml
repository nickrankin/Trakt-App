<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/moviedetailsactivity_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/moviedetailsactivity_error_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="Error getting Movie Details. Please check your internet connection"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/moviedetailsactivity_retry_button" />

        <Button
            android:id="@+id/moviedetailsactivity_retry_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retry"
            app:layout_constraintTop_toBottomOf="@id/moviedetailsactivity_error_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/moviedetailsactivity_imdb_button"
            app:layout_constraintBottom_toBottomOf="parent" />


        <ImageView
            android:id="@+id/moviedetailsactivity_poster"
            android:layout_width="85dp"
            android:layout_height="125dp"
            android:layout_margin="8dp"
            android:src="@drawable/ic_trakt_svgrepo_com"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/moviedetailsactivity_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/moviedetailsactivity_title_barrier"
            app:layout_constraintEnd_toStartOf="@id/moviedetailsactivity_status"
            app:layout_constraintStart_toEndOf="@id/moviedetailsactivity_poster"
            app:layout_constraintTop_toTopOf="@id/moviedetailsactivity_poster"
            tools:text="Pulp Fiction" />

        <TextView
            android:id="@+id/moviedetailsactivity_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/border"
            android:backgroundTint="@color/red"
            android:paddingStart="4dp"
            android:paddingTop="2dp"
            android:paddingEnd="4dp"
            android:paddingBottom="2dp"
            android:textAllCaps="true"
            android:textSize="11sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@id/moviedetailsactivity_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/moviedetailsactivity_title"
            app:layout_constraintTop_toTopOf="@id/moviedetailsactivity_title"
            tools:text="Status: Ended" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/moviedetailsactivity_title_barrier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="moviedetailsactivity_title, moviedetailsactivity_status"
            tools:layout_editor_absoluteY="82dp" />


        <TextView
            android:id="@+id/moviedetailsactivity_first_aired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:textSize="11sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/moviedetailsactivity_company"
            app:layout_constraintStart_toEndOf="@id/moviedetailsactivity_poster"
            app:layout_constraintTop_toBottomOf="@id/moviedetailsactivity_title_barrier"
            tools:text="Premiered: 01/01/1970" />

        <TextView
            android:id="@+id/moviedetailsactivity_company"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textStyle="bold"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/moviedetailsactivity_first_aired"
            app:layout_constraintTop_toTopOf="@id/moviedetailsactivity_first_aired"
            tools:text="Network: Netflix" />

        <TextView
            android:id="@+id/moviedetailsactivity_runtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="11sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"

            app:layout_constraintStart_toEndOf="@id/moviedetailsactivity_poster"
            app:layout_constraintStart_toStartOf="@+id/moviedetailsactivity_first_aired"
            app:layout_constraintTop_toBottomOf="@id/moviedetailsactivity_first_aired"
            tools:text="Runtime: 60 Minutes" />
        <TextView
            android:id="@+id/moviedetailsactivity_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@id/moviedetailsactivity_first_aired"
            app:layout_constraintStart_toStartOf="@+id/moviedetailsactivity_company"
            app:layout_constraintTop_toTopOf="@id/moviedetailsactivity_runtime"
            tools:text="Country: USA" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/moviedetailsactivity_infobox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="moviedetailsactivity_first_aired, moviedetailsactivity_company, moviedetailsactivity_runtime, moviedetailsactivity_country"
            tools:layout_editor_absoluteY="128dp" />

        <TextView
            android:id="@+id/moviedetailsactivity_genres"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:barrierAllowsGoneWidgets="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/moviedetailsactivity_title"
            app:layout_constraintTop_toBottomOf="@id/moviedetailsactivity_infobox"
            tools:text="Genres: Drame, Thriller, Action"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/moviedetailsactivity_directed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            android:textStyle="bold|italic"
            app:barrierAllowsGoneWidgets="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/moviedetailsactivity_genres"
            app:layout_constraintTop_toBottomOf="@id/moviedetailsactivity_genres"
            tools:text="Directed by: John Smith, Joe Bloggs" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/moviedetailsactivity_midsection_barrier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:barrierAllowsGoneWidgets="true"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="moviedetailsactivity_genres,moviedetailsactivity_directed,moviedetailsactivity_poster"
            tools:layout_editor_absoluteY="173dp" />

        <TextView
            android:id="@+id/moviedetailsactivity_trakt_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_corners_background"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            app:barrierAllowsGoneWidgets="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/moviedetailsactivity_midsection_barrier"
            tools:text="Trakt Rating: 10 (XX Users)"
            tools:visibility="visible" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/moviedetailsactivity_rating_episode_count_labels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="moviedetailsactivity_trakt_rating"
            tools:layout_editor_absoluteY="167dp" />


        <Button
            android:id="@+id/moviedetailsactivity_trailer"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_live_tv_24"
            android:layout_marginTop="8dp"
            android:text="Trailer"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/moviedetailsactivity_rating_episode_count_labels"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/moviedetailsactivity_imdb_button"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_imdb_logo_2016"
            android:text="IMDB"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/moviedetailsactivity_rating_episode_count_labels"
            app:layout_constraintStart_toEndOf="@id/moviedetailsactivity_trailer"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/moviedetailsactivity_video_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="moviedetailsactivity_imdb_button, moviedetailsactivity_trailer"
            tools:layout_editor_absoluteY="223dp" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/moviedetailsactivity_buttons_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/moviedetailsactivity_video_buttons"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/moviedetailsactivity_topbarrier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="moviedetailsactivity_title,moviedetailsactivity_directed,moviedetailsactivity_first_aired,moviedetailsactivity_poster, moviedetailsactivity_trakt_rating"
            tools:layout_editor_absoluteY="566dp" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/moviedetailsactivity_main_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="moviedetailsactivity_title_barrier,moviedetailsactivity_genres,moviedetailsactivity_midsection_barrier,moviedetailsactivity_poster,moviedetailsactivity_trakt_rating,moviedetailsactivity_first_aired,moviedetailsactivity_country,moviedetailsactivity_topbarrier,moviedetailsactivity_runtime,moviedetailsactivity_company,moviedetailsactivity_title,moviedetailsactivity_status,moviedetailsactivity_buttons_fragment_container,moviedetailsactivity_directed,moviedetailsactivity_infobox"
            tools:visibility="visible" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/moviedetailsactivity_error_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="moviedetailsactivity_error_text, moviedetailsactivity_retry_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/moviedetailsactivity_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>